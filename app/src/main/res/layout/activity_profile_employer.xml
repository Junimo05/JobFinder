<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="8dp">
    <TextView
        android:id="@+id/account_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trang cá nhân"
        android:textAlignment="center"
        android:textSize="32sp"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/account_Avatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/profile"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/account_Title"
        />
    <TextView
        android:id="@+id/account_EditAvatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chỉnh sửa Avatar"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/account_Avatar"/>
    <TextView
        android:id="@+id/account_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ten"
        android:textSize="24sp"
        android:textAlignment="textStart"
        app:layout_constraintTop_toBottomOf="@id/account_EditAvatar"/>
    <EditText
        android:id="@+id/account_EditName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Long"
        android:textSize="24sp"
        android:textAlignment="textStart"
        app:layout_constraintTop_toBottomOf="@id/account_Name"/>
    <TextView
        android:id="@+id/account_DateOfBirth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nam Sinh"
        android:textSize="24sp"
        android:textAlignment="textStart"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/account_EditName"/>
    <EditText
        android:id="@+id/account_EditBirth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2003"
        android:textSize="24sp"
        android:textAlignment="textStart"
        app:layout_constraintTop_toBottomOf="@id/account_DateOfBirth"/>
    <TextView
        android:id="@+id/account_Gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gioi Tinh"
        android:textSize="24sp"
        android:textAlignment="textStart"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/account_EditBirth"/>
    <RadioButton
        android:id="@+id/account_Radio1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nam"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/account_Gender"/>
    <RadioButton
        android:id="@+id/account_Radio2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nu"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/account_Gender"
        app:layout_constraintLeft_toRightOf="@id/account_Radio1"/>
    <TextView
        android:id="@+id/account_Mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mail"
        android:textSize="24sp"
        android:textAlignment="textStart"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/account_Radio1"/>
    <EditText
        android:id="@+id/account_EditMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="google@gmail.com"
        android:textSize="24sp"
        android:textAlignment="textStart"
        app:layout_constraintTop_toBottomOf="@id/account_Mail"/>
    <TextView
        android:id="@+id/account_Phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone"
        android:textSize="24sp"
        android:textAlignment="textStart"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/account_EditMail"/>
    <EditText
        android:id="@+id/account_EditPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="911"
        android:textSize="24sp"
        android:textAlignment="textStart"
        app:layout_constraintTop_toBottomOf="@id/account_Phone"/>
    <TextView
        android:id="@+id/account_Industry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Linh Vuc"
        android:textSize="24sp"
        android:textAlignment="textStart"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/account_EditPhone"/>
    <EditText
        android:id="@+id/account_EditIndustry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Digital Marketing"
        android:textSize="24sp"
        android:textAlignment="textStart"
        app:layout_constraintTop_toBottomOf="@id/account_Industry"/>
    <TextView
        android:id="@+id/account_Job"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cong Viec"
        android:textSize="24sp"
        android:textAlignment="textStart"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/account_EditIndustry"/>
    <EditText
        android:id="@+id/account_EditJob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CEO"
        android:textSize="24sp"
        android:textAlignment="textStart"
        app:layout_constraintTop_toBottomOf="@id/account_Job"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Luu Chinh Sua"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/account_EditJob"/>
</androidx.constraintlayout.widget.ConstraintLayout>