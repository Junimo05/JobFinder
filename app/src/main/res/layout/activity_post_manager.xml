            <TextView
                android:id="@+id/pm_Name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Long"
                android:textSize="28sp"
                android:layout_marginLeft="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/pm_Avatar3"/>
            <TextView
                android:id="@+id/pm_Date3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="26/05/2024"
                android:textSize="24sp"
                android:layout_marginLeft="8dp"
                app:layout_constraintTop_toBottomOf="@id/pm_Name3"
                app:layout_constraintLeft_toRightOf="@id/pm_Avatar3"/>
            <TextView
                android:id="@+id/pm_Description3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tuyen dung nhan vien lam viec ban thoi gian"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/pm_Avatar3"/>
            <ImageView
                android:id="@+id/pm_Image3"
                android:layout_width="match_parent"
                android:layout_height="192dp"
                android:background="@color/blue"
                app:layout_constraintTop_toBottomOf="@id/pm_Description3"/>
            <ImageView
                android:id="@+id/pm_Delete5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bottom_btn4"
                app:layout_constraintTop_toBottomOf="@id/pm_Image3"
                app:layout_constraintRight_toRightOf="parent"/>
            <ImageView
                android:id="@+id/pm_Delete6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bottom_btn4"
                android:layout_marginRight="8dp"
                app:layout_constraintTop_toBottomOf="@id/pm_Image3"
                app:layout_constraintRight_toLeftOf="@id/pm_Delete5"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>