<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="#FFFFFF">

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đặt mật khẩu mới"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginBottom="8dp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tránh đặt giống mật khẩu cũ của bạn"
        android:textSize="14sp"
        android:textColor="#7D7D7D"
        android:textAlignment="center"
        android:layout_marginBottom="16dp" />

    <!-- Password Input -->
    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mật Khẩu"
        android:inputType="textPassword"
        android:layout_marginBottom="8dp"
        android:padding="12dp"
        android:background="@drawable/forgotpass_input" />

    <!-- Confirm Password Input -->
    <EditText
        android:id="@+id/confirmPasswordInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập lại mật khẩu"
        android:inputType="textPassword"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:background="@drawable/forgotpass_input" />

    <!-- Confirm Button -->
    <Button
        android:id="@+id/confirmButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xác nhận"
        android:backgroundTint="#D1C4E9"
        android:textColor="#000"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        />

    <!-- Return to login screen -->
    <TextView
        android:id="@+id/returnToLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quay về trang đăng nhập"
        android:textSize="14sp"
        android:textColor="#7D7D7D"
        android:layout_marginTop="16dp" />
</LinearLayout>
