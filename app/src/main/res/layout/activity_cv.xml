<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="8dp">
    <TextView
        android:id="@+id/cv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Curriculum Vitae"
        android:textColor="#ACD793"
        android:textStyle="bold"
        android:textSize="32sp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/cv_candidate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Candidate:"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/cv_title"/>
    <TextView
        android:id="@+id/cv_candidateValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="candidate's name"
        android:textSize="16sp"
        android:textAppearance="@style/DisabledBoldText"
        app:layout_constraintTop_toBottomOf="@id/cv_candidate" />
    <TextView
        android:id="@+id/cv_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Age:"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/cv_candidateValue"/>
    <TextView
        android:id="@+id/cv_ageValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="18 tuoi"
        android:textSize="16sp"
        android:textAppearance="@style/DisabledBoldText"
        app:layout_constraintTop_toBottomOf="@id/cv_age"/>
    <TextView
        android:id="@+id/cv_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone:"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/cv_ageValue"/>
    <TextView
        android:id="@+id/cv_phoneValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="123911"
        android:textSize="16sp"
        android:textAppearance="@style/DisabledBoldText"
        app:layout_constraintTop_toBottomOf="@id/cv_phone"/>
    <TextView
        android:id="@+id/cv_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mail:"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/cv_phoneValue"/>
    <TextView
        android:id="@+id/cv_mailValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="emptymail@gmail.com"
        android:textSize="16sp"
        android:textAppearance="@style/DisabledBoldText"
        app:layout_constraintTop_toBottomOf="@id/cv_mail"/>
    <TextView
        android:id="@+id/cv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CV Description:"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/cv_mailValue"/>
    <EditText
        android:id="@+id/cv_descriptionValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textAppearance="@style/DisabledBoldText"
        app:layout_constraintTop_toBottomOf="@id/cv_description"/>
    <TextView
        android:id="@+id/cv_job"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Job Position:"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/cv_descriptionValue"/>
    <TextView
        android:id="@+id/cv_jobValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sales Manager"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        android:textAppearance="@style/DisabledBoldText"
        app:layout_constraintTop_toBottomOf="@id/cv_job"/>
    <Button
        android:id="@+id/cv_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ná»™p CV"
        android:backgroundTint="#ACD793"
        android:textColor="#F8F4E1"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/cv_jobValue"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>