<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

  <!-- Illustration -->
  <ImageView
      android:id="@+id/fgPass_illustration"
      android:layout_width="200dp"
      android:layout_height="150dp"
      android:layout_marginTop="32dp"
      android:src="@drawable/forgot_password" />

  <!-- Title -->
  <TextView
      android:id="@+id/fgPass_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:text="Quên mật khẩu?"
      android:textColor="#000"
      android:textSize="24sp"
      android:textStyle="bold" />

  <!-- Subtitle -->
  <TextView
      android:id="@+id/fgPass_subtitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:text="Đừng lo lắng! Hãy nhập email của bạn và chúng tôi sẽ gửi cho bạn một liên kết để đặt lại mật khẩu."
      android:textAlignment="center"
      android:textColor="#7D7D7D"
      android:textSize="14sp" />

  <!-- Email Input -->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:paddingTop="15dp">

    <EditText
        android:id="@+id/fgPass_emailInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/forgotpass_input"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:minWidth="330dp"
        android:padding="12dp" />
    <Button
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:layout_gravity="center"
          android:background="@drawable/email_send"/>
  </LinearLayout>

  <EditText
      android:id="@+id/fgPass_codeInput"
      android:layout_gravity="start"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="15dp"
      android:background="@drawable/forgotpass_input"
      android:hint="Enter code"
      android:inputType="textEmailAddress"
      android:padding="12dp" />

  <!-- Send Button -->
  <Button
      android:id="@+id/fgPass_sendButton"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:background="@drawable/forgotpass_input"
      android:backgroundTint="#007BFF"
      android:padding="12dp"
      android:text="Xác Nhận"
      android:textColor="#FFF" />

  <Button
      android:id="@+id/fgPass_backButton"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:backgroundTint="#9E9291"
      android:padding="12dp"
      android:text="Quay lại"
      android:textAlignment="center"
      android:textColor="#FFF" />

</LinearLayout>
